{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "module": "CommonJS",
        "outDir": "./dist",
        "rootDir": "./src",
        "target": "ES2022",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": false,
        "declarationMap": false,
        "strict": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}